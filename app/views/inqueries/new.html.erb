<h2>Medical Inquiry</h2>

<%= form_for(@inquery) do |f| %>
  <% if @inquery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inquery.errors.count, "error") %> prohibited new products:</h2>
      <ul>
      <% @inquery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :Preferred_Method_of_Contact %>
  <%= f.select :perfered_method, Inquery::METHODS%>

  <%= f.label :Phone %>
  <%= f.text_field :phone %>

  <%= f.label :Street %>
  <%= f.text_field :street%>

  <%= f.label :City %>
  <%= f.text_field :city%>

  <%= f.label :state %>
  <%= f.select :state, Inquery::STATES%>

  <%= f.label :Zip_Code %>
  <%= f.text_field :zip%> 

  <%= f.label :Product %>
  <%= collection_select(:inquery, :product_id, Product.all, :id, :name)%>

  <%= f.label :message %>
  <%= f.text_area :message, rows: 5, cols: 80%>

  <br />

  <%= f.submit "Contact Us", class: "btn-success" %>

<% end %>