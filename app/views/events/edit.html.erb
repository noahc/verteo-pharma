<h2>Edit Event</h2>
<%= form_for(@event)  do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited new products:</h2>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :Name %>
  <%= f.text_field :name%>

  <%= f.label :date %>
  <%= f.text_field :date, id: "datepicker" %>

    <%= f.label :street %>
  <%= f.text_field :street %>

    <%= f.label :city %>
  <%= f.text_field :city %>

    <%= f.label :State %>
    <%= f.select :state, Inquery::STATES%>
<br />
<%= f.submit "Edit Event", class: "btn-success" %>
<% end %>